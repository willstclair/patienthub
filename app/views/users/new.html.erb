<h1>New User</h1>


<%= form_tag(users_url, method: 'post') do %>


  <div>
    <%= label_tag :user_name %><br />
    <%= text_field_tag :user_name %>
  </div>

  <div>
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>


  <div>
    <%= submit_tag "Create User" %>
  </div>
<% end %>
