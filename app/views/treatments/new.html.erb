<h2>Add a treatment to the directory</h2>


<%= form_tag(treatments_url, method: 'post') do %>


  <div>
    <%= label_tag :treatment_name %><br />
    <%= text_field_tag :treatment_name %>
  </div>

  <div>
    <%= label_tag :treatment_id %><br />
    <%= text_field_tag :treatment_id %>
  </div>

  <div>
    <%= label_tag :treatment_category_id %><br />
    <%= text_field_tag :treatment_category_id %>
  </div>

  <div>
    <%= submit_tag "Create Treatment" %>
  </div>
<% end %>
